rem($pixels, $context = $mainFontSize)
  if unitless($pixels)
    $pixels = $pixels * 1px
  if unitless($context)
    $context = $context * 1px
  $pixels / $context * 1rem
size($width, $height = $width)
  width: $width
  height: $height

paddingLeftRight($padding)
  padding-left: $padding
  padding-right: $padding

marginLeftRight($margin)
  margin-left: $margin
  margin-right: $margin

flexRow($widht = 100%)
  flex: 0 0 $widht
  max-width $widht